CREATE DATABASE TiendaRopa;

USE TiendaRopa;

-- Tabla para Calzado
CREATE TABLE Calzado (
    id INT AUTO_INCREMENT PRIMARY KEY,
    tipo VARCHAR(50),
    color VARCHAR(30),
    talla VARCHAR(10),
    marca VARCHAR(50),
    clima VARCHAR(30),
    material VARCHAR(50),
    fecha_adquisicion DATE,
    descripcion TEXT
);

-- Tabla para Calcetines
CREATE TABLE Calcetines (
    id INT AUTO_INCREMENT PRIMARY KEY,
    tipo VARCHAR(50),
    color VARCHAR(30),
    talla VARCHAR(10),
    marca VARCHAR(50),
    clima VARCHAR(30),
    material VARCHAR(50),
    fecha_adquisicion DATE,
    descripcion TEXT
);

-- Tabla para Bóxers
CREATE TABLE Boxers (
    id INT AUTO_INCREMENT PRIMARY KEY,
    tipo VARCHAR(50),
    color VARCHAR(30),
    talla VARCHAR(10),
    marca VARCHAR(50),
    clima VARCHAR(30),
    material VARCHAR(50),
    fecha_adquisicion DATE,
    descripcion TEXT
);

-- Tabla para Pantalones
CREATE TABLE Pantalones (
    id INT AUTO_INCREMENT PRIMARY KEY,
    tipo VARCHAR(50),
    color VARCHAR(30),
    talla VARCHAR(10),
    marca VARCHAR(50),
    clima VARCHAR(30),
    material VARCHAR(50),
    fecha_adquisicion DATE,
    descripcion TEXT
);

-- Tabla para Cinturones
CREATE TABLE Cinturones (
    id INT AUTO_INCREMENT PRIMARY KEY,
    tipo VARCHAR(50),
    color VARCHAR(30),
    talla VARCHAR(10),
    marca VARCHAR(50),
    clima VARCHAR(30),
    material VARCHAR(50),
    fecha_adquisicion DATE,
    descripcion TEXT
);

-- Tabla para Camisetas
CREATE TABLE Camisetas (
    id INT AUTO_INCREMENT PRIMARY KEY,
    tipo VARCHAR(50),
    color VARCHAR(30),
    talla VARCHAR(10),
    marca VARCHAR(50),
    clima VARCHAR(30),
    material VARCHAR(50),
    fecha_adquisicion DATE,
    descripcion TEXT
);

-- Tabla para Jerseys
CREATE TABLE Jerseys (
    id INT AUTO_INCREMENT PRIMARY KEY,
    tipo VARCHAR(50),
    color VARCHAR(30),
    talla VARCHAR(10),
    marca VARCHAR(50),
    clima VARCHAR(30),
    material VARCHAR(50),
    fecha_adquisicion DATE,
    descripcion TEXT
);

-- Tabla para Cazadoras
CREATE TABLE Cazadoras (
    id INT AUTO_INCREMENT PRIMARY KEY,
    tipo VARCHAR(50),
    color VARCHAR(30),
    talla VARCHAR(10),
    marca VARCHAR(50),
    clima VARCHAR(30),
    material VARCHAR(50),
    fecha_adquisicion DATE,
    descripcion TEXT
);

-- Tabla para Abrigos
CREATE TABLE Abrigos (
    id INT AUTO_INCREMENT PRIMARY KEY,
    tipo VARCHAR(50),
    color VARCHAR(30),
    talla VARCHAR(10),
    marca VARCHAR(50),
    clima VARCHAR(30),
    material VARCHAR(50),
    fecha_adquisicion DATE,
    descripcion TEXT
);

-- Tabla para Ropa de Invierno
CREATE TABLE Ropa_De_Invierno (
    id INT AUTO_INCREMENT PRIMARY KEY,
    tipo VARCHAR(50),
    color VARCHAR(30),
    talla VARCHAR(10),
    marca VARCHAR(50),
    clima VARCHAR(30),
    material VARCHAR(50),
    fecha_adquisicion DATE,
    descripcion TEXT
);

