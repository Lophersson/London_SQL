---
SELECT 
    p.nombre AS partido, 
    pr.nombre AS provincia, 
    pp.numero_votos
FROM 
    partido_provincia pp
JOIN 
    partido p ON pp.partido_id = p.id
JOIN 
    provincia pr ON pp.provincia_id = pr.id;
---
SELECT 
    p.nombre AS partido, 
    SUM(pp.numero_votos) AS votos_totales
FROM 
    partido_provincia pp
LEFT JOIN 
    partido p ON pp.partido_id = p.id
GROUP BY 
    p.id;
---
